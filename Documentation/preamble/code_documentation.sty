%---------- Define Styles ----------------
% Fortan lstlisting style
\lstdefinestyle{fortranStyle}{
    language=[90]Fortran,               % Set language to Fortran 90
    basicstyle=\ttfamily,               % Set regular code style
    keywordstyle=\color{myblue},        % Set Keyword style
    commentstyle=\color{commentcolor},  % Comment style
    morecomment=[l]{!\ },               % Spacing for comment
    frame=single,                       % Creat box
    breaklines=true,                    %
}


%---------- Define Environments ----------

% Fortran Subroutine env
\lstnewenvironment{fortran_subroutine_lst}[1][]
{
    \lstset{style=fortranStyle, caption=#1, label=#1}
}
{} % Denotes end of lst environment

% Fortran Function env
\lstnewenvironment{fortran_function_lst}[1][]
{
    \lstset{style=fortranStyle, caption=#1, label=#1}
}
{} % Denotes end of lst environment

% Note the default value for the first
% argument is provided by [This is a box]
\newenvironment{boxed_v2}[2][This is a box]
    {\begin{center}
    Argument 1 (\#1)=#1\\[1ex]
    \begin{tabular}{|p{0.9\textwidth}|}
    \hline\\
    Argument 2 (\#2)=#2\\[2ex]
    }
    { 
    \\\\\hline
    \end{tabular} 
    \end{center}
    }

%---------- New Commands -----------------

% Create "Post-it" commands
\newcommandx{\unsure}[2][1=]{ % Unsure Command
    \todo[linecolor=red,backgroundcolor=red!25,bordercolor=red,#1]{#2}
}
\newcommandx{\change}[2][1=]{ % Change Command
    \todo[linecolor=blue,backgroundcolor=blue!25,bordercolor=blue,#1]{#2}
}
\newcommandx{\info}[2][1=]{ % Info Command
    \todo[linecolor=OliveGreen,backgroundcolor=OliveGreen!25,bordercolor=OliveGreen,#1]{#2}
}
\newcommandx{\improvement}[2][1=]{ % Improvement Command
    \todo[linecolor=Plum,backgroundcolor=Plum!25,bordercolor=Plum,#1]{#2}
}